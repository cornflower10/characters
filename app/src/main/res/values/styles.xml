<resources>

    <!-- Base application theme. -->
    <!-- app主题是深色字体就是白色否则就是黑色-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="welcome" parent="AppTheme.Base">
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>
    <style name="AppTheme" parent="AppTheme.Base"/>
    <style name="AppTheme.Main" parent="AppTheme.Base">
        <item name="android:textColorPrimary">#FFFFFF</item>
        </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="line_fill_v">
        <item name="android:background">@color/line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.4dp</item>
    </style>

    <style name="listViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:divider">@null</item>
    </style>
    <style name="inputDialog" parent="Base.AlertDialog.AppCompat.Light">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
</resources>
